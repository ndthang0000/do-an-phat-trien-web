

    {{>header-bottom}}
    <section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    
                </div>
            </div>
        </div>
    </section>

    <section class="product spad">
        <div class="container">
            <div class="row" style="position: relative;">  
                <div class="col-lg-3 col-md-5 ">
                    <div style="position: relative; width: 100%;">
                        <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Caterology</h4>
                            <ul>
                                {{#each caterology}}
                                <li><a href="/product/{{this}}">{{upperCase this}}</a></li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="sidebar__item">
                            <h4>Price</h4>
                            <div class="price-range-wrap">
                                <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                    data-min="2" data-max="40">
                                    <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                </div>
                                <div class="range-slider">
                                    <div class="price-input">
                                        <input type="text" id="minamount" name="min">
                                        <input type="text" id="maxamount" name="max">
                                        <button id="btn-ok"style="margin-left: 20px; padding: 5px 20px; border: none;outline: none; background-color: hotpink;border-radius: 5px;">OK</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="sidebar__item sidebar__item__color--option">
                            <h4>Colors</h4>
                            <div class="sidebar__item__color sidebar__item__color--white">
                                <label for="white">
                                    White
                                    <input type="radio" id="white">
                                </label>
                            </div>
                            <div class="sidebar__item__color sidebar__item__color--gray">
                                <label for="gray">
                                    Gray
                                    <input type="radio" id="gray">
                                </label>
                            </div>
                            <div class="sidebar__item__color sidebar__item__color--red">
                                <label for="red">
                                    Red
                                    <input type="radio" id="red">
                                </label>
                            </div>
                            <div class="sidebar__item__color sidebar__item__color--black">
                                <label for="black">
                                    Black
                                    <input type="radio" id="black">
                                </label>
                            </div>
                            <div class="sidebar__item__color sidebar__item__color--blue">
                                <label for="blue">
                                    Blue
                                    <input type="radio" id="blue">
                                </label>
                            </div>
                            <div class="sidebar__item__color sidebar__item__color--green">
                                <label for="green">
                                    Green
                                    <input type="radio" id="green">
                                </label>
                            </div>
                        </div>
                        <div class="sidebar__item">
                            <h4>Popular Size</h4>
                            <div class="sidebar__item__size">
                                <label for="large">
                                    S
                                    <input type="radio" id="large">
                                </label>
                            </div>
                            <div class="sidebar__item__size">
                                <label for="medium">
                                    M
                                    <input type="radio" id="medium">
                                </label>
                            </div>
                            <div class="sidebar__item__size">
                                <label for="small">
                                    L
                                    <input type="radio" id="small">
                                </label>
                            </div>
                            <div class="sidebar__item__size">
                                <label for="tiny">
                                    XL
                                    <input type="radio" id="tiny">
                                </label>
                            </div>
                        </div>
                        
                    </div>
                    </div>
                    
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h2>{{caterologyName}}</h2>
                        </div>
                    </div>
                    <div class="filter__item">
                        <div class="row">
                            <div class="col-lg-4 col-md-5">
                                <div class="filter__sort">
                                    <span>Sort By</span>
                                    <select>
                                        <option value="0">Default</option>
                                        <option value="0">Default</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="filter__found">
                                    <h6><span>16</span> Products found</h6>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-3">
                                <div class="filter__option">
                                    <span class="icon_grid-2x2"></span>
                                    <span class="icon_ul"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 80px;" id="allProduct">
                        {{#each products}}
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="https://the-1-beauty-fashion-admin.herokuapp.com{{imagesUrl.[0]}}" style="display: block;position: relative;"> 
                                    <div class="discount">-{{discount pricePromotion price}}%</div>
                                    <ul class="product__item__pic__hover">
                                        <li><a href="/product/detail/{{slug}}"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="/product/detail/{{slug}}"><i class="fa fa-retweet"></i></a></li>
                                        <li><a href="/product/detail/{{slug}}"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="/product/detail/{{slug}}" style="font-weight:600;font-size:20px">{{name}}</a></h6>
                                    <h4 style="color: #d0011b; font-weight: 650; text-align: center;position: relative;">${{pricePromotion}} <span style="color: #acacac;text-decoration: line-through;font-size: 16px;font-weight: 500;position: absolute; right: 35px;top: 3px;">${{price}}</span></h4>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h2>New Product</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="product__discount__slider owl-carousel">
                            {{#each relateProduct}}
                            <div class="col-lg-4">
                                <div class="product__discount__item">
                                    <div class="product__discount__item__pic set-bg"
                                        data-setbg="https://the-1-beauty-fashion-admin.herokuapp.com{{imagesUrl.[0]}}">
                                        <div class="product__discount__percent">-{{discount pricePromotion price}}%</div>
                                        <ul class="product__item__pic__hover">
                                            <li><a href="/product/detail/{{slug}}"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="/product/detail/{{slug}}"><i class="fa fa-retweet"></i></a></li>
                                            <li><a href="/product/detail/{{slug}}"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="product__discount__item__text">
                                        <h5><a href="/product/detail/{{slug}}">{{name}}</a></h5>
                                        <div class="product__item__price">${{this.pricePromotion}} <span>${{this.price}}</span></div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<script>
    document.addEventListener('DOMContentLoaded',()=>{
        document.querySelector('#btn-ok').addEventListener('click',(e)=>{
            const min=document.querySelector('#minamount').value
            const max=document.querySelector('#maxamount').value
            fetch('http://localhost:3000/product',{
                headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
                },
                method: "POST",
                body: JSON.stringify({min,max})
            })
            .then(res=>res.json())
            .then(res=>{
                const discont=(a,b)=>{
                    return (100-a/b*100).toFixed(0)
                }
                console.log(res.allProduct)
                if(res.success){
                    var html=res.allProduct.map(item=>
                        `<div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="https://the-1-beauty-fashion-admin.herokuapp.com${item.imagesUrl[0]}" style="display: block;position: relative; background-image: url('https://the-1-beauty-fashion-admin.herokuapp.com${item.imagesUrl}')"> 
                                    <div class="discount">-${discont(item.pricePromotion,item.price)}%</div>
                                    <ul class="product__item__pic__hover">
                                        <li><a href="/product/detail/${item.slug}"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="/product/detail/${item.slug}"><i class="fa fa-retweet"></i></a></li>
                                        <li><a href="/product/detail/${item.slug}"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="/product/detail/${item.slug}" style="font-weight:600;font-size:20px">${item.name}</a></h6>
                                    <h4 style="color: #d0011b; font-weight: 650; text-align: center;position: relative;">$${item.pricePromotion} <span style="color: #acacac;text-decoration: line-through;font-size: 16px;font-weight: 500;position: absolute; right: 35px;top: 3px;">$${item.price}</span></h4>
                                </div>
                            </div>
                        </div>`
                    ).join(' ')
                    console.log(html)
                    document.querySelector('#allProduct').innerHTML=html
                }
            })
        })
    })
</script>