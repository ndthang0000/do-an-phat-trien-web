<section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>All Production</span>
                        </div>
                        <ul>
                            {{#each category}}
                            <li><a href="/product/{{tittle}}">{{upperCase this.tittle}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form action="/product">
                                <div class="hero__search__categories">
                                    All Categories
                                    <span class="arrow_carrot-down"></span>
                                </div>
                                <input type="text" name="key" placeholder="Find your item you like?" style="color: #555;">
                                <button type="submit"  class="site-btn">SEARCH</button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text" style="align-items: center; display: flex;flex-direction: column;">
                                <h5>(+84) 357156559</h5>
                                <span>Support 24/7 time</span>
                            </div>
                        </div>
                    </div>
                    <div class="hero__item set-bg" data-setbg="/img/hero/banner-1.jpg">
                        
                    </div>
                </div>
            </div>
        </div>
</section>
    <!-- Hero Section End -->
    <!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                {{#each category}}
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="https://the-1-beauty-fashion-admin.herokuapp.com{{imageUrl}}">
                        <h5 style="background-color: #f5f6fa;";><a href="/product/{{tittle}}">{{tittle}}</a></h5>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>
    <!-- Categories Section End -->

    <!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        {{#each category}}
                        <li data-filter=".{{tittle}}">{{upperCase this.tittle}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            {{#each allProduct}}
            <div class="col-lg-3 col-md-4 col-sm-6 mix {{this.type.[0]}} {{this.type.[1]}} {{this.type.[2]}}">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="https://the-1-beauty-fashion-admin.herokuapp.com{{this.imagesUrl.[0]}}" style="display: block;position: relative;">
                        <div class="discount">-{{discount pricePromotion price}}%</div>
                        <ul class="featured__item__pic__hover">
                            <li><a href="/product/detail/{{this.slug}}"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="/product/detail/{{this.slug}}" class="shopping-cart" data-id={{_id}} data-size={{info.[0].size}} data-image="https://the-1-beauty-fashion-admin.herokuapp.com{{imagesUrl.[0]}}">
                            <i class="fa fa-shopping-cart" data-id={{_id}} data-size={{info.[0].size}} data-image="https://the-1-beauty-fashion-admin.herokuapp.com{{imagesUrl.[0]}}"></i></a></li>
                        </ul>
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="/product/detail/{{this.slug}}">{{name}}</a></h6>
                        <h5 style="color: red;" >${{price}}</h5>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
    <!-- Featured Section End -->

