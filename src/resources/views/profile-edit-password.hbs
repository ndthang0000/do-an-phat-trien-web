    <!-- Blog Section Begin -->
    <section class="blog spad" style="padding: 50px 0px;">
        <div class="container">
            <div class="row" style="justify-content: center;margin-bottom: 50px;">
                <h2 style="font-weight: 700;">Welcome to heaven fashion<span style="color:#2ecc71">1Beauty</span> <3 </h2>
            </div>
            <div class="row" style="gap: 10px;">
                <div class="col-lg-4 col-md-5" >
                    <div style="width: 250px; height: 250px;overflow: hidden; border-radius: 50%;text-align: center;margin:auto; border:5px solid rgb(228, 222, 222)">
                        <a href="/me"><img style="width: 100%;height: auto;" src="{{user.avatarUrl}}" alt=""></a>
                    </div>
                    <h3 style="text-align: center;margin-top: 10px;"><a href="/me">{{user.name}}</a></h3>
                </div>
                <div class="col-lg-5 col-md-7">
                    <form class="row" style="flex-direction: column; padding: 10px;" method="post">
                        <h3 style="margin-bottom: 30px;">Change Password </h3>
                        <p>New password least 8 character</p>
                        <div class="form-group">
                            <label for="">Current Password (*)</label>
                            <input type="password" name="currentPassword" required="true">
                            <span style="color: red;">{{message}}</span>
                        </div>
                        <div class="form-group">
                            <label for="">New Password (*)</label>
                            <input type="password" name="newPassword" required="true">
                        </div>
                        <div class="form-group">
                            <label for="">Retype new Password (*)</label>
                            <input type="password" id="retype" required="true">
                            <span class="info-err" style="color: red;"></span>
                        </div>
                        <button id="type-pass"type="submit">Save New Password</button>
                    </form>
                </div>
                <div class="col-lg-3 col-md-12" style="flex: 1;padding: 10px;">
                    <h3 style="margin-bottom: 30px;">Setting</h3>
                    <ul>
                        <li style="margin-bottom: 10px;"><a href="/me">View my information</a> </li>
                        <li style="margin-bottom: 10px;"><a href="">Change password</a> </li>
                        <li style="margin-bottom: 10px;"><a href="">Change information</a> </li>
                        <li style="margin-bottom: 10px;"><a href="">Edit my avatar</a> </li>
                        <li style="margin-bottom: 10px;"><a href="/cart">Go to my Cart</a> </li>
                        
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <script>
        document.addEventListener('DOMContentLoaded',()=>{
            const retype=document.querySelector('#retype')
            retype.addEventListener('input',(e)=>{
                let password=document.querySelector('input[name="newPassword"]').value
                if(e.target.value!==password){
                    document.querySelector('.info-err').innerText="Don't match with new password"
                    document.querySelector('#type-pass').addEventListener('click',preventSubmit)
                }
                else{
                    document.querySelector('.info-err').innerText=''
                    document.querySelector('#type-pass').removeEventListener('click',preventSubmit)
                }
            })
            function preventSubmit(e){
                e.preventDefault()
                return
            }
        })
    </script>