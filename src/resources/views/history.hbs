    <section class="blog spad" style="padding: 50px 0px;">
        <div class="container">
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <div class="row" style="gap: 10px;justify-content: space-evenly;" >
                    <div class="col-lg-6 col-md-12" style="padding: 10px;">
                        {{#each allOrder}}
                        <div class="accordion-item" >
                            <h2 class="accordion-header" id="flush-heading-{{@index}}" >
                                <button class="accordion-button collapsed" 
                                type="button" 
                                data-bs-toggle="collapse"
                                data-bs-target="#flush-collapse-{{@index}}" 
                                aria-expanded="false" 
                                aria-controls="flush-collapse-{{@index}}" 
                                {{#if (compareValue status 1)}} 
                                style="background-color: rgb(129, 199, 129);" 
                                {{else}}style="background-color: #ff7979;"
                                {{/if}}>
                                    {{momentFormat createdAt}}
                                <span style="margin-left: 30px;color:red;font-weight:650">${{sum}}</span>
                                <span style="margin-left: 30px;">{{{quantity}}} items</span>
                                <span style="margin-left: 30px;font-weight:650">{{#if (compareValue status 1)}} Done !!!{{else}}Is processing ...{{/if}}</span>
                                </button>
                            </h2>
                            <div id="flush-collapse-{{@index}}" class="accordion-collapse collapse" aria-labelledby="flush-heading-{{@index}}" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    {{#each this.orderId}}
                                    <li><img src="https://the-1-beauty-fashion-admin.herokuapp.com{{product.imagesUrl.[0]}}" alt="" style="width:30px"> {{infor.quantity}} item <b>{{product.name}}</b>, size: {{infor.size}} </li>
                                    {{/each}}
                                    <p style="color:#888;margin-top: 10px;margin-bottom: 0px;"><b>Address:</b>  {{this.address}}</p>
                                    <p style="color:#888"><b> Note:</b> {{#if (compareValue this.paymentInfor '')}}...{{else}} {{this.paymentInfor}} {{/if}}</p>
                                </div>
                            </div>
                        </div>
                        {{else}}
                        <h3><i class="bi bi-cart-x" style="margin-right: 15px;color: #2ecc71;"></i>Sorry, You have not purchased any orders yet</h3>
                        <div class="text-center"><a href="/product">Go to buy Product</a></div>
                        
                        {{/each}}
                    </div>
                    <div class="col-lg-3 col-md-12" style="padding: 10px;">
                        <h3 style="margin-bottom: 30px;">Setting</h3>
                        <ul>
                            <li style="margin-bottom: 10px;"><a href="/me">View my information</a> </li>
                            <li style="margin-bottom: 10px;"><a href="/me/edit/password">Change password</a> </li>
                            <li style="margin-bottom: 10px;"><a href="">Change information</a> </li>
                            <li style="margin-bottom: 10px;"><a href="/me/edit/avatar">Edit my avatar</a> </li>
                            <li style="margin-bottom: 10px;"><a href="/cart">Go to my Cart</a> </li>
                            
                        </ul>
                    </div>
                </div>
                
            
            </div>
        </div>
    </section>
